class Solution:
    def twoSum(self, nums: List[int], target: int) -> List[int]:
        #creating an empty dict
        prevMap = {}

        for i,n in enumerate(nums):
            #for every x, we calculate: complement = target - x
            diff = target - n

            #if complement found in prevMap{}, return the n value and its index
            if diff in prevMap:
                return [prevMap[diff], i]

            #if no, that number is added to the T chart
            prevMap[n] = i
