class Solution:
    def searchInsert(self, nums: List[int], target: int) -> int:
        l, r = 0, len(nums)-1

        while l<=r:
            mid = (l+r)//2

            if nums[mid] == target:
                return mid

            if nums[mid] < target:
                #target is in right half
                l = mid + 1
            else:
                #target is in left half
                r = mid - 1

        return l #if not found, l is the intersection point
        
