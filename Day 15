class Solution:
    def climbStairs(self, n: int) -> int:
        if n == 1:
            return 1
        if n == 2:
            return 2

        two_steps_before = 1
        one_step_before = 2
        current_ways = 0

        for i in range(3, n+1):
            current_ways = one_step_before + two_steps_before

            two_steps_before = one_step_before
            one_step_before = current_ways

        return one_step_before
        
