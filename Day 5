class Solution:
    def isValid(self, s: str) -> bool:
        Map = {")" : "(",
        "]" : "[",
        "}" : "{"}
        stack = []
        
        for char in s:
            #for a closing bracket
            if char in Map:
                #if stack is not empty and top of the stack matches the current closing bracket
                if stack and stack[-1] == Map[char]:
                    stack.pop()
                else:
                    return False
            #for an opening bracket - since its not the Map list, we append it to the empty stack
            else:
                stack.append(char)
        #returns true if stack is empty, false if not
        return True if not stack else False           
